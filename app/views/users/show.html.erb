<div class="panel panel-default">
  <div class="panel-heading">
    <h1 class="panel-title">
      <b><%= current_user.email %></b>
    </h1>
  </div>

  <div class="table-responsive">
    <table class="table">
      <tbody>
        <tr>
          <td>
            Member Since:
            <span class="right">
              <%= formatted_date(current_user) %>
            </span>
          </td>
        </tr>
        <tr>
          <td>
            Current Program:
            <span class ="right">
              <% if @active_program.nil? %>
                No program
              <% else %>
                <%= @active_program.name %>
              <% end %>
            </span>
          </td>
        </tr>
        <tr>
          <td>
            Total Workout Sessions:
            <span class="right">
              <%= @total_workout_sessions %>
            </span>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="form-action">
  <%= link_to "Sign Out", destroy_user_session_path, method: "delete", class: "btn btn-default btn-lg btn-block" %>
</div>