<div class="panel panel-default">
  <div class="panel-heading">
    <h1 class="panel-title"><b>All Workouts</b></h1>
  </div>

  <div class="table-responsive">
    <table class="table">
      <tbody>
        <% @workouts.each do |workout| %>
        <tr>
          <td>
            <%= workout.name %>
            <span class="right">
              <%= link_to "<span class='glyphicon glyphicon-edit'></span> Edit".html_safe, edit_workout_path(workout), class: "btn btn-default btn-sm" %>
              <%= link_to "View<span class='glyphicon glyphicon-chevron-right'></span>".html_safe, workout_path(workout), class: "btn btn-default btn-sm" %>
            </span>
          </td>
        </tr>
        <% end%>
      </tbody>
    </table>
  </div>
</div>