<div class="nested-fields">
  <fieldset>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :sets %>
      <%= f.number_field :sets, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :reps %>
      <%= f.number_field :reps, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :initial_weight %>
      <%= f.number_field :initial_weight, class: "form-control" %>
    </div>
  </fieldset>
  <%= link_to_remove_association "remove", f, class: "btn btn-danger btn-sm" %>
</div>
