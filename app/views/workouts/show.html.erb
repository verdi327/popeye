<div class="panel panel-default">
  <div class="panel-heading">
    <h1 class="panel-title">
      <b><%= @workout.name %></b>
      <span class="badge">42</span>
    </h1>
  </div>

  <div class="table-responsive">
    <table class="table">
      <tbody>
        <% @workout.exercises.each do |exercise| %>
        <tr>
          <td>
            <%= exercise.name %>
            <span class="right">
              <%= exercise.routine %>
            </span>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="form-action">
  <%= link_to "<span class='glyphicon glyphicon-edit'></span> Edit".html_safe, edit_workout_path(@workout), class: "btn btn-default btn-lg btn-block" %>
</div>

<div class="form-action">
  <%= link_to "<span class='glyphicon glyphicon-remove'></span> Delete".html_safe, workout_path(@workout), method: "delete", class: "btn btn-danger btn-lg btn-block" %>
</div>




